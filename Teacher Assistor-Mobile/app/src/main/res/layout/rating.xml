<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1">

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/textView24"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rate"
        android:id="@+id/textView24"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textColor="#060606" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Comment"
        android:id="@+id/textView25"
        android:layout_alignStart="@+id/textView24"
        android:layout_below="@+id/ratingBar"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="#010101" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText6"
        android:layout_below="@+id/textView25"
        android:layout_alignStart="@+id/textView25"
        android:layout_marginRight="30dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Submit"
        android:id="@+id/button29"
        android:layout_below="@+id/checkBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:background="#87c9bc" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show to TA"
        android:id="@+id/checkBox"
        android:checked="false"
        android:layout_alignEnd="@+id/button29"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/textView26"
        android:textSize="20dp"
        android:textColor="#0c0b0b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Recommend For"
        android:id="@+id/textView26"
        android:layout_centerVertical="true"
        android:layout_below="@+id/editText6"
        android:layout_marginTop="30dp"
        android:layout_alignStart="@+id/editText6"
        android:textSize="20dp"
        android:textColor="#0b0a0a" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText7"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/textView26"
        android:layout_alignStart="@+id/textView26"
        android:layout_marginTop="10dp" />

</RelativeLayout>
